@model IEnumerable<Member.Models.MemberModel>
@{
    ViewBag.Title = "Home Page";
}
<h1>Search</h1>
@using (Html.BeginForm("Search", "Home", FormMethod.Get))
{
    <input type="text" name="q" />
    <input type="submit" value="Search" />
}
<hr />
<div class="panel panel-primary">
    <div class="panel-heading">User Details</div>
    <table class="table table-striped">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
        </tr>
        @if (Model.Count()==0)
        {
            <tr><td colspan="5" class="text-center">No User Account!</td></tr>
        }
        else
        {
            foreach (var member in Model)
            {
                <tr>
                    <td>@member.Id</td>
                    <td>@member.Name</td>
                    <td>@member.Email</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = member.Id }, new { @class = "btn btn-primary btn-xs" })
                        @Html.ActionLink("Delete", "Delete", new { id = member.Id }, new { @class = "btn btn-primary btn-xs" })
                    </td>
                </tr>
            }
        }
    </table>
</div>